{
  "name": "next-markdown-blog",
  "version": "1.1.0",
  "private": true,
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "rm -rf .next && next build",
    "ci": "next lint && npm run typecheck && npm run build",
    "clean-up-branch": "git checkout main && git pull && git branch --merged main | grep -v -e main | xargs -I{} git branch -d {}",
    "dev": "rm -rf .next && npm run format && npm outdated; echo '\r'; next dev",
    "e2e:playwright": "npx playwright test",
    "format": "prettier --write --log-level silent . ",
    "lint": "next lint",
    "start": "next start",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0",
    "clipboardy": "^4.0.0",
    "gray-matter": "^4.0.3",
    "next": "^15.1.6",
    "next-intercept-stdout": "^1.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^9.1.0",
    "react-share": "^5.2.2",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.1.6",
    "@playwright/test": "^1.49.1",
    "@types/gtag.js": "^0.0.20",
    "@types/node": "^22.18.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vanilla-extract/next-plugin": "^2.4.14",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "9.1.2",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "react-syntax-highlighter": "^15.6.6",
    "typescript": "^5.9.2"
  }
}
